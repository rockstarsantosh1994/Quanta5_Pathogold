<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardBackgroundColor="@color/green100"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Santosh"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left|center"
            android:layout_marginStart="@dimen/_14ssp"
            android:layout_marginEnd="@dimen/_14ssp"
            android:fontFamily="@font/baloochettan2_regular"
            app:drawableEndCompat="@drawable/ic_arrow_down"
            android:drawableTint="@color/black"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_no_of_records_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Santosh"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="right|center"
        android:layout_marginStart="@dimen/_14ssp"
        android:layout_marginEnd="@dimen/_14ssp"
        android:fontFamily="@font/baloochettan2_regular"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_daily_cash_status"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:visibility="gone"/>

</androidx.appcompat.widget.LinearLayoutCompat>